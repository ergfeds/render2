{
  "name": "crypto-wallet-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "bash render-build.sh || node -e \"console.log('Build script failed, but continuing...')\"",
    "build:ts": "tsc --skipLibCheck",
    "build:transpile": "ts-node --transpileOnly -p tsconfig.json ./server.js",
    "setup": "npm install && npm run build",
    "dev": "ts-node-dev --transpile-only ./backend/server.ts",
    "postinstall": "npm run setup"
  },
  "dependencies": {
    "@hono/node-server": "^1.4.1",
    "@hono/trpc-server": "^0.3.4",
    "@trpc/client": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "superjson": "^2.2.2",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@types/hono": "^3.8.0",
    "@types/node": "^20.11.28",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 